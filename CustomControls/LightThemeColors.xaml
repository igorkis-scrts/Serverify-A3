<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CustomControls">

    <Color x:Key="EtherealGrey">#EEEEEE</Color>
    <Color x:Key="TextColor">#FF000000</Color>
    <SolidColorBrush x:Key="ControlSecondaryColorBrush" Color="{StaticResource EtherealGrey}" />
    <SolidColorBrush x:Key="TextColorBrush" Color="{StaticResource TextColor}" />
    <Style x:Key="DescriptionHeaderStyle" TargetType="Label">
        <Setter Property="Margin" Value="12" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style
        x:Key="SecondaryColorFlatButton"
        BasedOn="{StaticResource MetroFlatButton}"
        TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ControlSecondaryColorBrush}" />
    </Style>

</ResourceDictionary>